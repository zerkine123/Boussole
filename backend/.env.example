# ============================================
# Boussole Backend - Environment Configuration Template
# ============================================

# Database Configuration
# DATABASE_URL=postgresql+asyncpg://user:password@host:port/dbname
DATABASE_URL=postgresql+asyncpg://boussole:boussole_password@localhost:5432/boussole

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Backend Configuration
BACKEND_PORT=8000
SECRET_KEY=generate-a-long-random-secret-key-for-production
JWT_SECRET_KEY=generate-another-long-random-secret-key-for-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
# String representation of a list of origins (comma-separated or JSON array)
CORS_ORIGINS=http://localhost:3000,https://boussole.vercel.app,https://boussole-frontend.vercel.app

# AI / LLM Configuration
LLM_PROVIDER=gemini  # groq, openai, or gemini
GOOGLE_API_KEY=your-google-api-key
GROQ_API_KEY=your-groq-api-key
OPENAI_API_KEY=your-openai-api-key

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
APP_NAME=Boussole
