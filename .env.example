# ============================================
# Boussole - Algerian Data Analytics SaaS
# Environment Configuration Example
# ============================================

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=boussole
POSTGRES_PASSWORD=boussole_password
POSTGRES_DB=boussole
POSTGRES_PORT=5432

# ============================================
# Redis Configuration
# ============================================
REDIS_PORT=6379

# ============================================
# Backend Configuration
# ============================================
BACKEND_PORT=8000
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# Frontend Configuration
# ============================================
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production-min-32-chars
NODE_ENV=development

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# AI / LLM Configuration
# ============================================
# Choose one or both LLM providers
GROQ_API_KEY=your-groq-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# LLM Model Configuration
LLM_PROVIDER=groq  # Options: groq, openai
GROQ_MODEL=mixtral-8x7b-32768
OPENAI_MODEL=gpt-4-turbo-preview

# ============================================
# RAG Configuration
# ============================================
# Sentence Transformers for embeddings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Vector search configuration
VECTOR_SEARCH_TOP_K=5
VECTOR_SIMILARITY_THRESHOLD=0.7

# ============================================
# Celery Configuration
# ============================================
FLOWER_PORT=5555
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ============================================
# Data Ingestion Configuration
# ============================================
# Data sources configuration
DATA_SOURCES_ENABLED=ons,custom,api
DATA_INGESTION_SCHEDULE=0 2 * * *  # Daily at 2 AM (Cron format)

# Data storage paths
RAW_DATA_PATH=./data/raw
PROCESSED_DATA_PATH=./data/processed
CACHE_PATH=./data/cache

# ============================================
# pgAdmin Configuration (Optional)
# ============================================
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@boussole.dz
PGADMIN_PASSWORD=admin

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # Options: json, text

# ============================================
# Application Settings
# ============================================
ENVIRONMENT=development  # Options: development, staging, production
APP_NAME=Boussole
APP_VERSION=1.0.0
APP_DESCRIPTION=Algerian Data Analytics SaaS Platform

# ============================================
# Security Settings
# ============================================
# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # seconds

# Session configuration
SESSION_COOKIE_NAME=boussole_session
SESSION_COOKIE_SECURE=false  # Set to true in production with HTTPS
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax

# ============================================
# Email Configuration (Optional - for notifications)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@boussole.dz
SMTP_FROM_NAME=Boussole

# ============================================
# Monitoring & Analytics (Optional)
# ============================================
SENTRY_DSN=your-sentry-dsn-here
ANALYTICS_ENABLED=false

# ============================================
# Feature Flags
# ============================================
FEATURE_RAG_ENABLED=true
FEATURE_MAPS_ENABLED=true
FEATURE_DASHBOARDS_ENABLED=true
FEATURE_EXPORT_ENABLED=true
FEATURE_API_ACCESS_ENABLED=true
FEATURE_MULTILINGUAL_ENABLED=true
